@require 'cozy-ui'

.bnk-figure-wrapper
    font-size       32px
    margin-right    2.5em
    color           grey-08

    .bnk-figure-label
        display         block
        margin-bottom   .5em
        color           grey-11
        text-transform  uppercase
        font-size       12px

    .bnk-figure-total
        font-weight    900

    .bnk-figure-currency
        margin-left .2em
        color       grey-11

    .bnk-figure-total--positive
        color   emerald

        .bnk-figure-currency
            color   emerald

    .bnk-figure-total--negative
        color   pomegranate

        .bnk-figure-currency
            color   pomegranate
