@require 'cozy-ui'

.bnk-table-account
    composes full-width-table from '../ducks/commons/Layout.styl'
    .bnk-table-libelle
        flex-basis 30%

    .bnk-table-bank
        flex-basis 15%

    .bnk-table-account
        flex-basis 17%

    .bnk-table-type
        flex-basis 15%

    .bnk-table-shared
        flex-basis 15%

    .bnk-table-actions
        flex-basis 8%
        text-align right

.bnk-action-button
    background 0
    border 0
    color dodger-blue
    text-transform uppercase
    cursor pointer

    &.icon-plus
        padding-left 1.5em
        background  embedurl('../assets/icons/icon-add.svg') left center no-repeat
