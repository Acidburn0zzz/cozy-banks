@require './spacers.styl'
@require 'settings/palette'
@require 'generic/animations'

:global
    // Global utils classes comes here
    .u-ellipsis
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

    .u-spin
        animation  spin 1s linear infinite
        display inline-block

    .u-text-bold
        font-weight bold

    .u-hover:hover
        background paleGrey
        cursor pointer

    // to remove after https://github.com/cozy/cozy-ui/pull/399 is merged
    .u-clickable
        cursor pointer

    .u-text-center
        text-align center
