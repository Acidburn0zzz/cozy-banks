@require './spacers.styl'
@require 'settings/palette'
@require 'generic/animations'

:global
  // Global utils classes comes here

    // to remove after update cozy-ui
    .u-hidden
        display none

    .u-ellipsis
        white-space nowrap
        text-overflow ellipsis
        overflow hidden

    .u-spin
        animation  spin 1s linear infinite
        display inline-block

    .u-text-bold
        font-weight bold

    .u-hover:hover
        background paleGrey
        cursor pointer
