@require 'cozy-ui'

purple=#a75bcb
green=#35ce68

.sharing-icon
    background-image embedurl('../assets/icons/ui/icon-share.svg')
    display inline-block
    background-size 0.6rem 0.6rem
    width 1rem
    height 1rem
    background-repeat no-repeat
    background-position 0.2rem 0.2rem
    border-radius 50%
    vertical-align bottom

.sharing-icon--to
    background-color green

.sharing-icon--from
    background-color purple

