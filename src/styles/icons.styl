@require 'cozy-ui'

purple=#a75bcb
green=#35ce68

.sharing-icon
    background-image embedurl('../assets/icons/ui/icon-share.svg')
    display inline-block
    background-size .6rem .6rem
    width 1rem
    height 1rem
    background-repeat no-repeat
    background-position .2rem .2rem
    border-radius 50%
    vertical-align bottom
    margin-right 0.5rem
    margin-left 0.5rem

.sharing-icon--to
    background-color green

.sharing-icon--from
    background-color purple

