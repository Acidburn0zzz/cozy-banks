@import 'cozy-ui'

.account-switch
    position relative
    margin-bottom 30px

.account-switch-button
    background  embedurl('../assets/icons/icon-chevron-down.svg') 90% center no-repeat
    padding 10px 10%

    h3
        font-size 1em
        margin 5px 0
    span
        font-size .8em
        color grey

.account-switch-menu
    position absolute
    width 100%
    max-height 250px
    overflow auto
    top 90%
    left 10%
    background white
    border 1px solid grey
    border-radius 4px
    z-index 1
    padding 15px 0

    h4
        margin 0
        margin-bottom 10px
        padding 0 13px
        font-size .8em
        color grey

    ul
        list-style none
        margin 0
        padding 0

    li
        box-sizing border-box
        padding 3px 8px
        border-left 3px solid transparent

    .active
        border-left-color dodger-blue
        background  embedurl('../assets/icons/icon-checked-blue.svg') 95% center no-repeat
        font-weight bold
