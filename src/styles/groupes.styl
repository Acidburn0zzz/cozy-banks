@require 'cozy-ui'

.Groups__table
    composes full-width-table from '../ducks/commons/Layout.styl'
    tr:hover
        background transparent

    .bnk-table-libelle
        flex 0 0 30%

    .bnk-table-comptes
        flex 0 0 50%

    .bnk-table-actions
        flex 0 0 20%
        text-align right

.bnk-action-button
    background 0
    border 0
    color dodger-blue
    text-transform uppercase
    cursor pointer

    &.icon-plus
        padding-left 1.5em
        background  embedurl('../assets/icons/icon-add.svg') left center no-repeat


.bnk-form
    @extend $form
    @extend $form-text
    padding 10px 20px

    input[type=text]
        width 100%

.coz-table-modal
    width           100%

    .bnk-table-acct-number
        color cool-grey

    .coz-table-cell
        flex 0 0 33%

        &:first-child
            padding-left 0
        &:last-child
            padding-right 0
            text-align right
