@require 'generic/normalize.styl'
@require 'elements/defaults.styl'
@require './utilities.styl'
@require './text.styl'
@require 'settings/breakpoints'
@require '~styles/variables.styl'

h4
    margin-top 0
    margin-bottom 1rem

html, body
    +medium-screen()
        overflow-x hidden

+small-screen()
    [role='banner'][data-drawer-visible='true']
        z-index 90

.c-content
    width 100%
    padding content-padding

    +small-screen()
        &
            padding content-padding-small

    +medium-screen()
        display block
