@require 'cozy-ui'

.bank-tabs-links
    margin     0
    padding    0
    list-style none
    border-bottom  1px solid grey
    left-spaced(-30px)

    li
        display inline-block

    li:first-child .bank-tabs-link
        padding-left 30px

.bank-tabs-link
    display inline-block
    padding        10px 15px
    cursor         pointer
    text-transform uppercase
    font-size      .8em
    color          grey

    &:hover
        text-decoration none

    &.active
        color          dodger-blue
        border-bottom 2px solid dodger-blue

.bank-tabs-tab
    padding-top    20px
