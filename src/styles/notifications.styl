@import 'cozy-ui'

h4
    color charcoal-grey
    font-size 1.2em

h5
    color charcoal-grey
    font-size 1em
    margin-top 0
    margin-bottom 5px

.notification
    display flex
    justify-content flex-start
    align-items center
    max-width 600px
    margin-bottom 20px

.notification-description
    color cool-grey
    flex-grow 1
    margin 0
    font-size .9em

input[type='text'].notification-input
    padding .5em .3em
    margin 0 5px
    width 4.5em

    &.suffixed::-webkit-inner-spin-button
    &.suffixed::-webkit-outer-spin-button
        -webkit-appearance none

    &::-webkit-contacts-auto-fill-button
        visibility     hidden
        display        none
        pointer-events none

    &.suffixed + span
        position absolute
        margin-left -1.5em
        margin-top .6em
