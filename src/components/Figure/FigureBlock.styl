@require '~styles/breakpoints.styl'

.bnk-figure-wrapper
    color charcoal-grey

.bnk-figure-label
    color cool-grey
    margin 0
    text-transform uppercase
    font-size 0.75rem
    line-height 1rem

.bnk-figure
    font-size 2rem
    line-height 2.625rem

+small-screen()
    .bnk-figure-wrapper
        font-size .7em

    .bnk-figure
        font-size 1.5rem
        line-height 1.75rem
        padding-bottom 0.5rem
