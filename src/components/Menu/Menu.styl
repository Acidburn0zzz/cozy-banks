@require 'components/popover.styl'

.coz-menu
    position relative
    display  inline-block

.coz-menu-inner
    display    none
    position   absolute
    @extend    $popover
    right      0
    padding    5px 0
    margin     0
    margin-top 1px
    min-width  220px

.coz-menu__inner--opened
    display block

.coz-menu__btn
    font-size 1rem
    border 0

.coz-menu__btn:not([disabled]):not([aria-disabled=true]):hover
.coz-menu__btn:not([disabled]):not([aria-disabled=true]):active
.coz-menu__btn:not([disabled]):not([aria-disabled=true]):focus
    background transparent
