@require 'cozy-ui'
@require '../../styles/breakpoints.styl'

.coz-table
    position        relative
    display         flex
    flex-direction  column
    flex            1 1 100%
    text-align      left
    color           cool-grey

    thead, tbody
        display   flex
        flex-direction column
        flex-grow 1
        flex-shrink 0

    tbody
        flex-basis auto
        overflow  auto

    tr
        flex            1 0 auto
        display         flex
        flex-direction  row
        align-items     center
        border-bottom   1px solid silver

    tbody tr
        &:hover
            background-color pale-grey

    th
        text-align left

    thead
        td, th
            padding         em(8px, 12px) em(32px, 12px) // @stylint ignore
            font-size       12px
            text-transform  uppercase
            display block


    td, th
        box-sizing  border-box
        padding 1em 2rem
        font-size   14px
        flex-grow 1
        flex-shrink 0
        display block

    +medium-screen()
        tr
            max-width  100vw

    +small-screen()
        thead
            display none

        tbody
            max-height  100%
            font-size 0.8em

        td
            padding 1em 1rem

    .coz-table-td-with-icon
        background-repeat no-repeat
        padding-left calc(3rem + 32px)
        background-position 2rem
        background-size 32px
        text-transform uppercase

        @media (max-width: (768/basefont)rem)
            padding-left calc(1.5rem + 26px)
            background-position 1rem
            background-size 26px

+small-screen()
    .coz-table
        .mobile-row
            flex-wrap wrap

        .mobile-row:first-child
            border-top 1px solid silver

        .mobile-row-main
            flex-basis 100%
            padding-top 0.5rem
            padding-bottom 0.25rem
            font-size 1rem
            color charcoal-grey

        .mobile-row-label
            padding-top 0.25rem
            padding-bottom 0.5rem
            font-size 0.75rem
            color cool-grey
