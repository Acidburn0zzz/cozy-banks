@require '~styles/breakpoints.styl'

.Breadcrumb
  &__title
    display inline-block
    color cool-grey

  &__crumb
    display inline-block

  &__last &__title
    color black

  &__separator
    horizontally-padded .3em

  &__link
    cursor pointer

  +small-screen()
    &__crumb:not(&__last)
      display none
