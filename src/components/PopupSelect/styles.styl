.PopupSelect__content
    margin-left -1.5em
    width calc(100% + 3em)

.PopupSelect__title
    border-bottom 1px solid silver

.PopupSelect__row
    border-bottom 1px solid silver

    &:hover
        background-color pale-grey
        cursor pointer

    &:last-child
        border-bottom 0

.buttonIcon
    padding-right .5rem
    cursor pointer
