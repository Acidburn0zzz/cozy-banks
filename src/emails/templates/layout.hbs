<mjml>
   <mj-head>
      <mj-font name="Lato" href="https://fonts.googleapis.com/css?family=Lato" />
      <mj-style inline="inline">
        {{{ embedFile 'style.css' }}}
      </mj-style>
      <mj-style>
        @media screen and (max-width: 420px) {
          .header__desc__title {
            text-align: center !important;
          }
          .header__desc__subtitle {
            text-align: center !important;
          }
          .header__title > td {
            text-align: center !important;
          }
          .header__title > td > table {
            width: 100px;
            margin: auto;
          }

          .footer__settings > td > div {
            text-align: center !important;
          }

          .footer__help > td > div {
            text-align: center !important;
          }
        }
      </mj-style>
      <mj-attributes>
        <mj-all font-family="Lato, Helvetica, Arial, sans-serif"></mj-all>
      </mj-attributes>
   </mj-head>
  <mj-body>
    <mj-container background-color="#f5f6f7">
      <mj-section padding-top="0" padding-bottom="0">
        <mj-column>
          <mj-image width="100px" src="https://files.cozycloud.cc/bank/email-assets/logo-cozy.png" />
        </mj-column>
      </mj-section>

      <!-- white sheet -->
      <mj-wrapper background-color="white" border='1px solid #d6d6d8' border-top="none">
        <!-- header -->
        <mj-section padding-bottom="0" padding-top="0">
          <mj-column width="50%">
            {{#block 'appLogo' }}{{/block}}
          </mj-column>
          <mj-column width="50%"  css-class="emailHeader">
            <mj-text padding-top="0" padding-bottom="0">
              {{#block 'emailHeader' }}{{/block}}
            </mj-text>
          </mj-column>
        </mj-section>

        <mj-section padding-top="8px" padding-bottom="8px">
          <mj-column>
            <mj-divider border-width="1px" border-color="#95999d" />
          </mj-column>
        </mj-section>


        <!-- content -->
        {{#block 'content' }}{{/block}}
      </mj-wrapper>
      <mj-section padding-top="0" css-class="footer">
        <mj-column width="50%">
          <mj-text padding-bottom="0" css-class="footer__settings">Gérer les alertes</mj-text>
        </mj-column>
        <mj-column width="50%">
          <mj-text css-class="footer__help">Aide et support - Mentions légales</mj-text>
        </mj-column>
      </mj-section>
    </mj-container>
  </mj-body>
</mjml>



