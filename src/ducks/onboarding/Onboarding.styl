@require '../../styles/breakpoints.styl'

.Onboarding
    margin-left auto
    margin-right auto
    h2
        text-align center
        margin-bottom 2rem

    &__sections
        display flex
        justify-content space-around

        +small-screen()
            flex-direction column
            align-items center

    &__section
        max-width 18.75rem
        text-align center

        +small-screen()
            max-width auto

    &__icon
        width 100px

    &__connect
        text-align center

    &__loading
        margin 0 auto
