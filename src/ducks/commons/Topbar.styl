@require '~styles/breakpoints.styl'

$coz-bar-size = 48px

.Topbar-title
    h2
        font-size 1.5rem
        margin 0 auto 2rem

.Topbar-left
    display none

+small-screen()
    .Topbar-title
        display     flex
        align-items center
        margin   0

        // ellipsis
        text-overflow  ellipsis
        overflow       hidden
        white-space    nowrap

        h2
            font-size 1.3125rem
            margin    0

    .Topbar-left
        // same dimensions as in the bar
        width 40px
        margin-right 0.25rem

        overflow hidden
        display block
        box-sizing border-box

        button
            padding 0
            margin 0
            border 0
            height 3rem
            display block
            background transparent
            cursor pointer
            width 100%

            svg
                margin-top 2px
