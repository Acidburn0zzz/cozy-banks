@require 'cozy-ui'

$coz-bar-size = 48px

@media (max-width: (768/basefont)rem)
    .fil-topbar
        bottom-spaced(10px)
        right-spaced(32px)
        left-spaced(32px)
        display     flex
        align-items center
        margin   0
        position fixed
        top      0
        left     2.5em
        right    48px
        z-index  $nav-index
        height   $coz-bar-size
        text-overflow  ellipsis
        overflow       hidden
        white-space    nowrap
        line-height    1

        > h2
            font-size 1.3em
            margin    0
