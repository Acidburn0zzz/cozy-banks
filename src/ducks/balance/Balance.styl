@require 'settings/breakpoints'
@require '~styles/mixins.styl'
@require 'settings/palette.styl'

.balance-table
    @extend $full-width-table

.balance
    .kpi
        margin 0 0 1em 0
    .balance-table
        .account_name
            maxed-flex-basis 40%
        .solde
            maxed-flex-basis 20%
            text-align right
        .bank_name
            maxed-flex-basis 20%
            color coolGrey
        .account_number
            maxed-flex-basis 20%
            color coolGrey

        tbody
            .solde
            .account_name
                color charcoalGrey

                &.warning
                    font-weight bold
                    color texasRose

                    span
                        margin-left 5px
                        heigth 1rem

                        &:before
                            vertical-align middle
                            margin-bottom 3px
                &.alert
                    color pomegranate

+small-screen()
    .balance
        .balance-table
            .account_name
                maxed-flex-basis 60%
            .solde
                maxed-flex-basis 40%
