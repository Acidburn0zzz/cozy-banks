@import 'cozy-ui'

.balance
    .kpi
        margin 1em 0
    table
        .account_name
            flex-basis 40%
        .solde
            flex-basis 20%
            text-align right
        .bank_name
            flex-basis 20%
        .account_number
            flex-basis 20%

        tbody
            .solde
            .account_name
                color charcoal-grey

                &.alert
                    font-weight bold
                    color pomegranate

                    span
                        margin-left 5px
                        heigth 1rem

                        &:before
                            vertical-align middle
                            margin-bottom 3px

@media (max-width: (768/basefont)rem)
    .balance
        table
            .account_name
                flex-basis 60%
            .solde
                flex-basis 40%
            .bank_name
                display none
            .account_number
                display none
