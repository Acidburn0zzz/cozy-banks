@require 'settings/breakpoints'
@require '~styles/mixins.styl'
@require 'settings/palette.styl'

.balance-table
    @extend $full-width-table

.balance
    .kpi
        margin 0 0 1em 0

    .balance-row
        cursor pointer

    .balance-row--selected
        border-left 0.25rem dodgerBlue solid
        background alpha(dodgerBlue, 0.1)

    .balance-row--selected-account-from-group
        border-left 0.25rem #cdced2 solid
        background alpha(silver, 0.1)

    .balance-table
        .account_name
            maxed-flex-basis 30%
        .solde
            maxed-flex-basis 10%
            text-align right
        .bank_name
            maxed-flex-basis 35%
            color coolGrey
        .account_number
            maxed-flex-basis 25%
            color coolGrey

        tbody
            .solde
            .account_name
                color charcoalGrey

                &.warning
                    font-weight bold
                    color texasRose

                    span
                        margin-left 5px
                        heigth 1rem

                        &:before
                            vertical-align middle
                            margin-bottom 3px
                &.alert
                    color pomegranate

+small-screen()
    .balance
        .balance-table
            .account_name
                maxed-flex-basis 60%
            .solde
                maxed-flex-basis 40%
