@require 'settings/breakpoints'
@require '~components/SelectDates/SelectDates.styl'
@require '~styles/mixins.styl'

.TransactionPage
    display flex
    flex-direction column
    height 100%
    +small-screen()
        display block

        // SelectDate is fixed on mobile so we need to add some
        // padding
        padding-top select-date-height-small

.TransactionPage__bottom
    overflow auto // TODO remove in small screen

.bnk-mov-figures
    margin          1em 0
    display         flex
    flex-direction  row
    flex-wrap       wrap

    > div
        margin 0 1em 1em 0
        flex 1

        +medium-screen()
            &
                margin 0
                flex-basis 50%

.TransactionPage__Breadcrumb
    margin-top 2.375rem
