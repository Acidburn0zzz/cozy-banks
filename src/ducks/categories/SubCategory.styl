@import 'cozy-ui'

[role=application] // @stylint ignore
    @extend $table

    activeBkgColor = #E8F2FF

    .coz-table-row
        font-size   em(14px)
        width       100%
        background  activeBkgColor
        cursor      pointer
        &:hover
            background  activeBkgColor

    .coz-table-cell.bnk-table-subcat-name
        box-sizing border-box
        margin-left     2em
        padding-left    em(60px) // 24px + 36px
        flex            0 0 26.5%
        color           black
        background      none

    .bnk-table-subcat-percentage
        flex        0 0 10%
        text-align  center
        white-space nowrap
        font-weight bold
        color       black

    .bnk-table-subcat-operation
        flex        0 0 10%
        text-align  center

    .bnk-table-subcat-amount
        flex            0 0 15%
        padding-right   1em
        text-align      right

    .bnk-table-actions
        flex        0 0 20%

    @media (max-width: (768/basefont)rem)
        .coz-table-cell.bnk-table-subcat-name
            flex            1 0 10.5em

        .bnk-table-subcat-amount
            padding-right   2.3em

    @media (max-width: (1023/basefont)rem)
        .coz-table-cell.bnk-table-subcat-name
            flex            1 0 14em

        .bnk-table-subcat-amount
            padding-right   1em
            margin-right    3em
